[
    {
        "version": "2.1.0",
        "description": "Tests multi-endpoint support and procedures support",

        "procedures": {
            "build_owner": [
                {
                    "$set": {
                        "owner": {
                            "object": "user"
                        }
                    }
                },
                {
                    "$move": {
                        "user_id": "owner.id",
                        "user_name": "owner.name"
                    }
                }
            ]
        },

        "gaps": [
            {
                "path": "/image/search",
                "method": "GET",

                "response": {
                    "body": {
                        "$procedures": {
                            "results.$": "build_owner"
                        }
                    }
                }
            },
            {
                "endpoints": [
                    "GET /image/*",
                    "PUT /image/*",
                    "POST /image/*",
                    "DELETE /image/*"
                ],
                
                "response": {
                    "body": {
                        "$procedures": "build_owner"
                    }
                }
            }
        ]
    },
    {
        "version": "2.0.0",
        "description": "All user endpoints are wrapped in arrays",
        "gaps": [
            {
                "path": "/user/*",
                "method": "get",
                
                "error": {
                    "body": {
                        "$wrap": []
                    }
                }
            }
        ]
    },
    {
        "version": "1.1.0",
        "description": "Added social interactions to users, removed 'object' field",
        
        "gaps": [
            {
                "path": "/user/search",
                "method": "get",
                
                "request": {
                    "query": [
                        {
                            "$set": {
                                "pagination": {}
                            }
                        },
                        {
                            "$move": {
                                "limit": "pagination.limit",
                                "last": "pagination.last"
                            }
                        }
                    ]
                },
                "response": {
                    "body": [
                        {
                            "$unset": ["$.following_count", "$.followed_count"],
                            "$set": {
                                "$.object": "user"
                            }
                        },
                        {
                            "$wrap": {
                                "": "data"
                            }
                        }
                    ]
                }
            }
        ]
    }
]